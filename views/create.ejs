
<%- include("static_files/header.ejs") %>

<div class="create-container">
  <div class="create-header">
    <h1>Create New Post</h1>
    <p>Share your thoughts with the world</p>
  </div>

  <div class="create-form-container">
    <form action="/posts" method="POST">
      <div class="form-group">
        <label for="title">Post Title</label>
        <input type="text" id="title" name="title" required placeholder="Enter a catchy title...">
      </div>
      
      <div class="form-group">
        <label for="content">Post Content</label>
        <!-- <textarea id="content" name="content" rows="10" required placeholder="Write your post content here..."></textarea> -->
         <textarea id="content" name="content" rows="10" required placeholder="Write your post content here..." style="width: 100%; resize: vertical; overflow-wrap: break-word;"></textarea>
      </div>
      
      <div class="form-actions">
        <button type="submit" class="btn btn-submit">Publish Post</button>
        <a href="/all" class="btn btn-cancel">Cancel</a>
      </div>
    </div>

</div>


